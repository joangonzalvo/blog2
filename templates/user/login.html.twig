{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/estilo.css') }}"/>
{% endblock %}
{% block body %}
    
    <div class="container-fluid">
        <div class="col-lg-4 box-form">
            <form action="{{path("login")}}" method="post">
                <div class="form-group">
                    <input type="text" name="_username" id="username" class="form-control" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" name="_password" id="password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Log in</button>
                </div>
            </form>
                <div class="alert alert-danger">
            {% if error %}
                {{error.messageKey|trans(error.messageData, 'security')}}
            {% endif %}
        </div>
        </div>
        
    </div>
{% endblock %}